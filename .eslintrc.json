{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["airbnb", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/prop-types": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-multi-spaces": "error",
        "prettier/prettier": ["error"]
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            ["@", "./src"]
          ],
          "extensions": [".js", ".jsx"]
        }
      }
    }
  }